<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="{% if description %}{{ description | strip_html | strip_newlines | truncate(160) }}{% else %}{{ site.description }}{% endif %}">
  
  <!-- Open Graph -->
  <meta property="og:title" content="{{ title or site.title }}">
  <meta property="og:type" content="article">
  <meta property="og:url" content="{{ site.main_url }}{{ site.baseurl }}{{ page.url }}">
  <meta property="og:site_name" content="{{ site.title }}">
  {% if description %}<meta property="og:description" content="{{ description | strip_html | strip_newlines | truncate(160) }}">{% endif %}
  
  <title>{{ title or site.title }}</title>
  
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="https://crl2020.imgix.net/img/crl-32x32.png" sizes="32x32">
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&family=Source+Code+Pro&family=Source+Sans+Pro:wght@300;400;600;700&display=swap" rel="stylesheet">
  
  <!-- Bootstrap CSS - CDN fallback + local -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
  <link rel="stylesheet" href="{{ '/css/lavish-bootstrap.css' | relative_url }}">
  
  <!-- CSS Variables and Foundational Styles -->
  <link rel="stylesheet" href="{{ '/css/variables.css' | relative_url }}">
  <link rel="stylesheet" href="{{ '/css/fonts-typography.css' | relative_url }}">
  
  <!-- Custom CSS from original Jekyll source -->
  <link rel="stylesheet" href="{{ '/css/customstyles.css' | relative_url }}">
  <link rel="stylesheet" href="{{ '/css/theme-blue.css' | relative_url }}">
  
  <!-- Additional body padding for fixed navbar -->
  <style>
    body {
      padding-top: 84px;
    }
  </style>
  
  <!-- jQuery -->
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.min.js" crossorigin="anonymous"></script>
  
  <!-- Page config for customscripts.js -->
  <script>
    const pageConfig = {
      tocNotNested: {{ toc_not_nested or false }}
    };
  </script>
</head>
<body>
  {% include "navbar.njk" %}
  
  <main class="content">
    {{ content | safe }}
  </main>
  
  <!-- Bootstrap JS - CDN fallback + local -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
  <script src="{{ '/js/bootstrap453.bundle.min.js' | relative_url }}"></script>
  
  <!-- Other JS dependencies -->
  <script src="{{ '/js/clipboard.min.js' | relative_url }}"></script>
  <script src="{{ '/js/toc.js' | relative_url }}"></script>
  
  <!-- Custom JS -->
  <script src="{{ '/js/customscripts.js' | relative_url }}"></script>
</body>
</html>